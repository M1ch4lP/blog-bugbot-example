datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  isPublic  Boolean  @default(false)
  author    String?
  createdAt DateTime @default(now())
}

